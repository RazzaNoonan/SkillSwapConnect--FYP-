package io.github.RazzaNoonan.messagingservice;

public class Message {
    private String senderId;
    private String text;
    private long timestamp;

    // Firestore requires a no-argument constructor for Data to Object conversion
    public Message() {}

    // Constructor that you are trying to use
    public Message(String senderId, String text, long timestamp) {
        this.senderId = senderId;
        this.text = text;
        this.timestamp = timestamp;
    }

    // Getters and setters for each field
    public String getSenderId() {
        return senderId;
    }

    public void setSenderId(String senderId) {
        this.senderId = senderId;
    }

    public String getText() {
        return text;
    }

    public void setText(String text) {
        this.text = text;
    }

    public long getTimestamp() {
        return timestamp;
    }

    public void setTimestamp(long timestamp) {
        this.timestamp = timestamp;
    }
}
