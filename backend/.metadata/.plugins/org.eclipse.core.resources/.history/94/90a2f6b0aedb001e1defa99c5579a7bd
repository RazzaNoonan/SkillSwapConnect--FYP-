package io.github.RazzaNoonan.messagingservice;

import org.springframework.messaging.handler.annotation.MessageMapping;
import org.springframework.messaging.handler.annotation.SendTo;
import org.springframework.stereotype.Controller;

@Controller
public class WebSocketMessageController {

    @MessageMapping("/send")
    @SendTo("/topic/public")
    public ChatMessage receiveWebSocketMessage(ChatMessage message) {
        System.out.println("Received WebSocket message: " + message.getText());
        return message; // Echo back the message
    }
}
