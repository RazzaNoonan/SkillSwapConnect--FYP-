package io.github.RazzaNoonan.messagingservice;

public class ChatMessage {
    private String text;
    private String timestamp; // This is a simple string representation. You might want to use a proper date/time type.

    // Default constructor is needed for JSON deserialization
    public ChatMessage() {
    }

    // Constructor with fields
    public ChatMessage(String text, String timestamp) {
        this.text = text;
        this.timestamp = timestamp;
    }

    // Getter and setter for text
    public String getText() {
        return text;
    }

    public void setText(String text) {
        this.text = text;
    }

    // Getter and setter for timestamp
    public String getTimestamp() {
        return timestamp;
    }

    public void setTimestamp(String timestamp) {
        this.timestamp = timestamp;
    }

    // Optional: Override toString() method for easy logging and debugging
    @Override
    public String toString() {
        return "ChatMessage{" +
                "text='" + text + '\'' +
                ", timestamp='" + timestamp + '\'' +
                '}';
    }
}
