package io.github.RazzaNoonan.messagingservice;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.stereotype.Service;

import com.fasterxml.jackson.databind.JsonNode;
import com.fasterxml.jackson.databind.ObjectMapper;

@Service
public class KafkaMessageListener {

    private final FirebaseService firebaseService;

    @Autowired
    public KafkaMessageListener(FirebaseService firebaseService) {
        this.firebaseService = firebaseService;
    }

    @KafkaListener(topics = "YourKafkaTopic", groupId = "yourGroupId")
    public void listen(String messageJson) {
        String chatId = extractChatIdFromMessageJson(messageJson); // Correctly implemented to extract chatId
        firebaseService.saveMessage(chatId, messageJson); // Use the extracted chatId
    }
    
    private String extractChatIdFromMessageJson(String messageJson) throws Exception {
        ObjectMapper mapper = new ObjectMapper();
        JsonNode rootNode = mapper.readTree(messageJson);
        return rootNode.path("chatId").asText();
    }
}